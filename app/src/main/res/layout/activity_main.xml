<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginAndRegister.MainActivity">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:id="@+id/lay01"
                android:layout_marginTop="50dp"
                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pizzalogo1"
                    />

                <TextView

                    android:id="@+id/textslogan"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="'Pizza loop'"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingTop="0dp"
                    >

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/warning"
                        android:textSize="15dp"


                        />

                    <EditText
                        android:id="@+id/enterEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/cust_edittext"
                        android:drawableRight="@drawable/ic_account_box_black_24dp"
                        android:hint="  Email"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"

                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        app:passwordToggleDrawable="@drawable/ic_vpn_key_black_24dp"
                        app:passwordToggleEnabled="true"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/enterpassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="  password"
                            android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:paddingLeft="10dp"
                            android:background="@drawable/cust_edittext"
                            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                            android:inputType="textPassword"

                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lay01"
                android:layout_marginTop="25dp"


                >

                <Button
                    android:id="@+id/register"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Register Now"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/cust_button"
                    android:onClick="openRegister"
                    />

                <Button
                    android:id="@+id/signin"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/cust_button2"
                    android:gravity="center_vertical"
                    android:text="LOG IN"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_marginLeft="50dp"
                    android:onClick="opensign"/>



            </LinearLayout>


        </RelativeLayout>


    </ScrollView>









</RelativeLayout>