<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CartItems.UpdateQuantity">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/layout_background"
        android:layout_alignParentTop="true"
        android:elevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="UPDATE ORDER"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:elevation="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_arrow_back_black"
            android:onClick="goback"
            />

    </RelativeLayout>






            <android.support.v7.widget.CardView
                android:id="@+id/cardimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/rel">
               <!-- android:layout_below="@+id/rel2"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">






            <TextView
            android:id="@+id/updtitemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/black"
            />


            <TextView
                android:id="@+id/updttxtprice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="price"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/updtitemname"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_gravity="center"/>





            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/updtelegantBtn"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_below="@id/updttxtprice"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                app:initialNumber="1"
                app:finalNumber="25"
                app:backGroundColor="@android:color/background_dark"
                app:textColor="@android:color/white"
                app:textSize="7sp"
                android:layout_gravity="center"



                >

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            <Button
                android:id="@+id/updtpurchaseBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/elegantBtn"
                android:layout_gravity="center"
                android:text="Add to cart"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/cust_button"
                android:onClick="openCart"

                />

             <TextView
                 android:id="@+id/showw"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />




                </LinearLayout>

            </android.support.v7.widget.CardView>












</RelativeLayout>
